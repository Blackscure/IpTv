<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Movie_requested">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient">

                <ImageView
                    android:id="@+id/movie_back"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:scaleType="fitXY" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp">


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/channelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:letterSpacing="0.15"
                        android:text="THE PLANET OF THE BLAH APES"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_back">


                    <GrideLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical">


                        <TextView

                            android:id="@+id/about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Planet of the Apes is an American science fiction media franchise consisting of films, books, television series, comics, and other media about a world in which humans and intelligent apes clash for control."
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <RelativeLayout
                            android:id="@+id/personDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/tvlogo"
                                android:layout_width="62dp"
                                android:layout_height="62dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/live_tv"
                                app:tint="@android:color/white" />
                            <ImageView
                                android:id="@+id/favlogo"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                 app:tint="@android:color/white" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="16dp"
                                android:layout_marginBottom="10dp"
                                android:layout_toRightOf="@id/tvlogo"
                                android:layout_toLeftOf="@id/favlogo"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/director"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Director: John Doe"
                                    android:textColor="@android:color/secondary_text_dark"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/other_stuff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="USA, 2014, 130 minutes"
                                    android:textColor="#989797"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/released"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTint="@android:color/white"
                            android:text="Released: 2014"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTint="@android:color/white"
                            android:text="Rating: 3.3"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/genre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:drawablePadding="5dp"
                            android:drawableTint="@android:color/white"
                            android:text="Genre: 3.3"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/play"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"

                            android:drawablePadding="5dp"
                            android:drawableTint="@android:color/white"
                            android:onClick="backtolist"
                            android:padding="5dp"
                            android:text="PLAY"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="24dp"
                            android:textStyle="bold" />

                    </GrideLayout>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/TOP_END"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <View
                    android:id="@+id/darkLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/iconColor" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>